<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Menus" Height="452" Width="1000">
    <Grid Margin="10,0,10,3" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/logo-pnk0srk93i29l7492cvpm2m0zq3u8sxfn2bojuhiv6.png" Stretch="None" TileMode="None"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="mnuMenu" Height="24" VerticalAlignment="Top" Margin="0,10,0,0" Background="#FF8FBCE0">
            <MenuItem x:Name="mnuPessoas" Header="Cadastro de Pessoas" Height="27" Click="mnuPessoas_Click"/>
            <MenuItem x:Name="mnuProdutos" Header="Cadastro de Produtos" Height="28" Click="mnuProdutos_Click"/>
            <MenuItem x:Name="mnuPedidos" Header="Cadastro de Pedidos" Height="27" Click="mnuPedidos_Click"/>
        </Menu>
    </Grid>
</Window>
