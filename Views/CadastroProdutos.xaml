<Window x:Class="WpfApp1.CadastroProdutos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Cadastro de Produtos" Height="452" Width="1000">
    <Grid Margin="10,10,10,3" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Label x:Name="lblNome" Content="Nome:" HorizontalAlignment="Left" Margin="179,6,0,0" VerticalAlignment="Top" Height="34"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="229,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="23"/>
        <Label x:Name="lblCodigo" Content="Código:&#xD;&#xA;" HorizontalAlignment="Left" Margin="53,6,0,0" VerticalAlignment="Top" Height="55"/>
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Margin="101,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" HorizontalContentAlignment="Stretch" Height="23"/>
        <Label Content="Valor:&#xD;&#xA;&#xA;" HorizontalAlignment="Left" Margin="655,5,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="txtValor" Margin="703,10,138,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24"/>
        <DataGrid x:Name="dtGridProdutos" Margin="8,75,114,29" AutoGenerateColumns="False" CanUserAddRows="False"
      IsReadOnly="False" SelectionChanged="dtGridProdutos_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProdutoId" Binding="{Binding Id}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="ProdutoCodigo" Binding="{Binding Codigo}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Produto" Binding="{Binding Nome}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Preço Unit." Binding="{Binding Preco, StringFormat=F2}" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Id:&#xD;&#xA;" HorizontalAlignment="Left" Margin="1,8,0,0" VerticalAlignment="Top" Height="54"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="26,13,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="29" Height="25" IsEnabled="False"/>
        <Button x:Name="btnExcluir" Content="Excluir" Margin="0,0,20,28" Background="#FFF90909" FontWeight="Bold" Foreground="White" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="81" Click="btnExcluir_Click"/>
        <Button x:Name="btnGravar" Content="Gravar" Margin="0,0,22,70" Background="#FF92DBF9" FontWeight="Bold" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="81" Click="btnGravar_Click"/>
        <Button x:Name="btnNovo" Content="Novo" HorizontalAlignment="Right" Margin="0,0,22,113" VerticalAlignment="Bottom" Height="31" Width="81" Background="#FF92DBF9" FontWeight="Bold" Click="btnNovo_Click"/>
        <Button x:Name="btnPesquisar" Content="Pesquisar" HorizontalAlignment="Right" Margin="0,0,23,155" VerticalAlignment="Bottom" Height="31" Width="81" Background="#FF92DBF9" FontWeight="Bold" Click="btnPesquisar_Click"/>
        <Image Margin="0,8,6,0" Source="/Resources/logo-pnk0srk93i29l7492cvpm2m0zq3u8sxfn2bojuhiv6.png" Stretch="Fill" RenderTransformOrigin="0.581,0.486" Height="33" VerticalAlignment="Top" HorizontalAlignment="Right" Width="112"/>
    </Grid>
</Window>
