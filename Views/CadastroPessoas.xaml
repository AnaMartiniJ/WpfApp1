<Window x:Class="WpfApp1.CadastroPessoas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cadastro de Pessoas" Height="600" Width="1000" MinHeight="600" MinWidth="1000">

    <Grid Margin="10">

        <!-- Campos Pessoa -->
        <Label Content="Id:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,-3,0,0"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,0,0,0" Width="100" IsEnabled="False" />

        <Label Content="CPF/CNPJ:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,-3,0,0" RenderTransformOrigin="0.521,0.241" />
        <TextBox x:Name="txtCpfCnpj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,0,0,0" Width="200" />

        <Label Content="Nome:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,-3,0,0" />
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="468,2,0,0" Width="372" />

        <Label Content="Endereço:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" />
        <TextBox x:Name="txtEndereco" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,30,0,0" Width="420" Height="20" />

        <Label Content="Complemento:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="499,26,0,0" />
        <TextBox x:Name="txtComplemento" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="591,27,0,0" Width="249" Height="20" />

        <Label Content="CEP:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" />
        <TextBox x:Name="txtCep" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,63,0,0" Width="120" />

        <Label Content="Cidade:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,60,0,0" />
        <TextBox x:Name="txtCidade" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="234,63,0,0" Width="180" />

        <Label Content="Estado:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="430,60,0,0" />
        <TextBox x:Name="txtEstado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="480,62,0,0" Width="120" />

        <!-- Botões Pessoa -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,103,13,0" Width="90" Height="190">
            <Button x:Name="btnCriarPedidos" Content="Incluir Pedido" Background="#FFF1EB42" Margin="0,0,0,10" Height="30" Click="btnCriarPedido_Click" FontWeight="Bold"/>
            <Button x:Name="btnPesquisar" Content="Pesquisar" Background="#FF92DBF9" Margin="0,0,0,10" Height="30" Click="btnPesquisar_Click" FontWeight="Bold"/>
            <Button x:Name="btnNovo" Content="Novo" Background="#FF92DBF9" Margin="0,0,0,10" Height="30" Click="btnNovo_Click" FontWeight="Bold"/>
            <Button x:Name="btnGravar" Content="Gravar" Background="#FF92DBF9" Margin="0,0,0,10" Height="30" Click="btnGravar_Click" FontWeight="Bold"/>
            <Button x:Name="btnExcluir" Content="Excluir" Background="#FFF90909" Foreground="White" Height="30" Click="btnExcluir_Click" FontWeight="Bold"/>
        </StackPanel>

        <!-- Grid Pessoas -->
        <DataGrid x:Name="dtGridPessoas"
                  Margin="0,100,130,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  AlternatingRowBackground="#FFF5F5F5"
                  AlternationCount="2"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  VerticalScrollBarVisibility="Visible"
                  SelectionChanged="dtGridPessoas_SelectionChanged" Height="184" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True" />
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Header="CPF/CNPJ" Binding="{Binding CpfCnpj}" Width="160" IsReadOnly="True" />
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="220" IsReadOnly="True" />
                <DataGridTextColumn Header="Compl." Binding="{Binding Complemento}" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="CEP" Binding="{Binding Cep}" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Cidade" Binding="{Binding Cidade}" Width="160" IsReadOnly="True" />
                <DataGridTextColumn Header="UF" Binding="{Binding Estado}" Width="60" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Grid Pedidos -->
        <GroupBox Header="Pedidos" Margin="0,320,130,10" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Filtros -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <CheckBox x:Name="chkMostrarEntregues" Content="Mostrar apenas pedidos entregues" Checked="FiltrosPedido_Changed" Unchecked="FiltrosPedido_Changed"/>
                    <CheckBox x:Name="chkMostrarPagos" Content="Mostrar apenas pedidos pagos" Unchecked="FiltrosPedido_Changed" Checked="FiltrosPedido_Changed"/>
                    <CheckBox x:Name="chkMostrarPendentes" Content="Mostrar apenas pedidos pendentes" Checked="FiltrosPedido_Changed" Unchecked="FiltrosPedido_Changed"/>
                    <CheckBox x:Name="chkMostrarTodos" Content="Mostrar Todos" Checked="chkMostrarTodos_Checked"/>
                </StackPanel>

                <DataGrid x:Name="dtGridPedidos"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="#FFF5F5F5"
                          AlternationCount="2"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          VerticalScrollBarVisibility="Visible"
                          >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNome, StringFormat=d}" Width="120" IsReadOnly="True" />
                        <DataGridTextColumn Header="Data da Venda" Binding="{Binding Data, StringFormat=d}" Width="120" IsReadOnly="True" />
                        <DataGridTextColumn Header="Valor Total" Binding="{Binding Total, StringFormat=C}" Width="100" IsReadOnly="True" />
                        <DataGridTextColumn Header="Forma de Pagamento" Binding="{Binding FormaPgto}" Width="150" IsReadOnly="True" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150" IsReadOnly="True" />
                        <DataGridTextColumn Header="Itens" Binding="{Binding ItensTexto}" Width="150" IsReadOnly="True" />
                        <DataGridTemplateColumn Header="Ações" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Pago" Background="#FF90EE90" Click="BtnMarcarPago_Click" Tag="{Binding Id}" />
                                        <Button Content="Enviado" Background="#FF87CEFA" Click="BtnMarcarEnviado_Click" Tag="{Binding Id}" />
                                        <Button Content="Recebido" Background="#FFFFD700" Click="BtnMarcarRecebido_Click" Tag="{Binding Id}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </GroupBox>

        <!-- Logo no canto superior direito -->
        <Image Source="/Resources/logo-pnk0srk93i29l7492cvpm2m0zq3u8sxfn2bojuhiv6.png" HorizontalAlignment="Right" VerticalAlignment="Top" Width="113" Height="37" Margin="0,5,10,0"/>

    </Grid>
</Window>
