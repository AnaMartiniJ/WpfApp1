<Window x:Class="WpfApp1.CadastroPedidos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Cadastro de Pedidos" Height="450" Width="970">
    <Grid Margin="10,7,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblId" Content="Id:" Margin="1,7,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="22"/>
        <TextBox x:Name="txtId" Margin="25,11,0,0" VerticalAlignment="Top" Height="19" HorizontalAlignment="Left" Width="89" IsEnabled="False"/>

        <Label x:Name="lblCpfCnpj" Content="Cliente:" Margin="123,7,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <ComboBox x:Name="cbCliente" Margin="177,11,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
              Width="220" DisplayMemberPath="Nome" SelectedValuePath="Id"/>

        <Label x:Name="lblPesquisa" Content="PesquisaId:" Margin="412,9,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="67"/>

        <Label x:Name="lblFormaPgto" Content="Forma Pagamento:" HorizontalAlignment="Left" Margin="9,63,0,0" VerticalAlignment="Top" Width="110"/>
        <ComboBox x:Name="cbFormaPgto" Margin="123,66,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="215">
            <ComboBoxItem Content="Dinheiro"/>
            <ComboBoxItem Content="Cartão Crédito"/>
            <ComboBoxItem Content="Cartão Débito"/>
            <ComboBoxItem Content="PIX"/>
            <ComboBoxItem Content="Boleto"/>
        </ComboBox>

        <Label x:Name="lblStatus" Content="Status:" HorizontalAlignment="Left" Margin="346,61,0,0" VerticalAlignment="Top" Width="57"/>
        <TextBox x:Name="txtStatus" Margin="396,65,0,0" VerticalAlignment="Top" Height="18" HorizontalAlignment="Left" Width="228" IsReadOnly="True" Text="Em edição"/>

        <Label x:Name="lblValor" Content="Valor Total:" HorizontalAlignment="Left" Margin="8,105,0,0" VerticalAlignment="Top" Width="67"/>
        <TextBlock x:Name="txtTotal" Margin="79,108,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="113" FontWeight="Bold"/>

        <Label x:Name="lblData" Content="Data Pedido:" HorizontalAlignment="Left" Margin="214,103,0,0" VerticalAlignment="Top" Width="90"/>
        <DatePicker x:Name="dpData" Margin="294,107,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140"/>

        <StackPanel Orientation="Horizontal" Margin="8,135,114,0" VerticalAlignment="Top">
            <Label Content="Produto:" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbProduto" Width="250" Margin="6,0,10,0" DisplayMemberPath="Nome" SelectedValuePath="Id" SelectionChanged="cbProduto_SelectionChanged"/>
            <Label Content="Preço:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPreco" Width="90" Margin="6,0,10,0" IsReadOnly="True"/>
            <Label Content="Qtd:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtQtd" Width="60" Margin="6,0,10,0"/>
            <Button x:Name="btnAdicionarItem" Content="Adicionar Item" Width="120" Click="btnAdicionarItem_Click"/>
            <Button x:Name="btnRemoverItem" Content="Remover Sel." Width="110" Margin="10,0,0,0" Click="btnRemoverItem_Click"/>
        </StackPanel>

        <DataGrid x:Name="dtGridPedidos" Margin="8,170,114,20" AutoGenerateColumns="False" CanUserAddRows="False"
              IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProdutoId" Binding="{Binding ProdutoId}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Produto" Binding="{Binding ProdutoNome}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Qtd" Binding="{Binding Quantidade}" Width="80"/>
                <DataGridTextColumn Header="Preço Unit." Binding="{Binding PrecoUnitario, StringFormat=F2}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=F2}" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnPesquisar" Content="Pesquisar" HorizontalAlignment="Right" Margin="0,0,9,144" VerticalAlignment="Bottom" Height="31" Width="97" Background="#FF92DBF9" FontWeight="Bold" Click="btnPesquisar_Click"/>
        <Button x:Name="btnNovo" Content="Novo" HorizontalAlignment="Right" Margin="0,0,8,102" VerticalAlignment="Bottom" Height="31" Width="97" Background="#FF92DBF9" FontWeight="Bold"/>
        <Button x:Name="btnGravar" Content="Finalizar Pedido" Margin="0,0,8,59" Background="#FF92DBF9" FontWeight="Bold" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="97" Click="btnGravar_Click"/>
        <Button x:Name="btnExcluir" Content="Excluir" Margin="0,0,9,18" Background="#FFF90909" FontWeight="Bold" Foreground="White" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="98" Click="btnExcluir_Click"/>
        <TextBox x:Name="txtPesquisaId" HorizontalAlignment="Left" Margin="486,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" Height="23"/>
        <Image Margin="0,8,6,0" Source="/Resources/logo-pnk0srk93i29l7492cvpm2m0zq3u8sxfn2bojuhiv6.png" Stretch="Fill" RenderTransformOrigin="0.581,0.486" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105"/>
    </Grid>
</Window>
